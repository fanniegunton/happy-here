---
import logo from '../../assets/HH-logo.jpg';
import instagramIcon from '../../images/Instagram.svg';
---

<nav>
  <a href="/" class="logo-link">
    <img
      src={logo.src}
      alt="Happy Here logo with a happy hour drink"
      class="logo"
    />
  </a>
  <div class="nav-links">
    <a href="/map">Map</a>
    <a href="/about">About</a>
    <a href="mailto:happyhappyhere@gmail.com">Contact</a>
    <a
      href="https://www.instagram.com/takeouttracker/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <img src={instagramIcon.src} class="instagram-icon" alt="Instagram" />
    </a>
  </div>
</nav>

<style>
  nav {
    margin: 0 auto 60px;
    padding: 0 20px;
    display: flex;
    align-items: start;
    justify-content: space-between;
  }

  .logo-link {
    max-width: 65%;
  }

  .logo {
    display: block;
    width: 150px;
    object-fit: cover;
    border-radius: 90px;
    margin: 0 auto;
  }

  .nav-links {
    font-family: 'Lato', Helvetica, sans-serif;
    font-size: 20px;
    font-weight: 400;
    line-height: 1.0;
    text-transform: uppercase;
    padding-top: 40px;
    flex: 1 0 auto;
    max-width: 600px;
    text-wrap: balance;
    display: flex;
    align-items: center;
    justify-content: end;
    gap: 40px;
  }

  .instagram-icon {
    width: auto;
    color: #000000;
  }

  @media (max-width: 900px) {
    .nav-links {
      font-size: 18px;
    }
  }

  @media (max-width: 700px) {
    nav {
      display: block;
      margin: 0 auto 40px;
    }

    .logo {
      width: 100px;
    }

    .nav-links {
      margin-top: 16px;
      justify-content: center;
      padding: 10px 0;
      font-size: 14px;
    }

    .instagram-icon {
      align-content: end;
      margin-left: 8px;
    }
  }
</style>
