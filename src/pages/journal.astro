---
import Layout from '@components/astro/Layout.astro';
---

<Layout title="Journal - Happy Here">
  <div class="journal-container">
    <h1>Journal Coming Soon!</h1>
  </div>
</Layout>

<style>
  .journal-container {
    padding: 0 20px;
    max-width: 1000px;
    min-height: 100vh;
  }

  h1 {
    font-family: 'Playfair Display', Georgia, serif;
    font-weight: 300;
    font-size: 72px;
    line-height: 1.35;
    letter-spacing: -0.02em;
    margin-bottom: 60px;
  }

  @media (max-width: 900px) {
    h1 {
      font-size: 64px;
    }
  }

  @media (max-width: 700px) {
    .journal-container {
      margin: 0 30px;
      padding: 0;
    }

    h1 {
      padding-top: 20px;
      font-size: 40px;
    }
  }
</style>
